[alias]
  amendpush = "!f() { git add ${@:-.} && git commit --amend --no-edit && git push -f; }; f"
  br = branch
  co = commit
  d = diff
  delete-merged = "!git branch --merged| egrep -v '(^\\*|master|main|develop)' | xargs git branch -d"
  discard = "!git reset --hard HEAD && git clean -di"
  ds = diff --staged
  fixup = "!f() { \
    COMMIT=$(git log --oneline | fzf --height 40% --reverse --prompt='Select commit for fixup: ' | awk '{print $1}'); \
    if [ -n \"$COMMIT\" ]; then \
      if ! git diff --quiet || ! git diff --cached --quiet; then \
        git stash push -k -u -m 'temp-fixup-stash'; \
        STASHED=true; \
      else \
        STASHED=false; \
      fi; \
      git commit --fixup $COMMIT; \
      N=$(($(git rev-list --count $COMMIT..HEAD) + 1)); \
      GIT_SEQUENCE_EDITOR=: git rebase -i --autosquash HEAD~$N; \
      [ \"$STASHED\" = true ] && git stash pop --quiet; \
    fi; \
  }; f"
  lo = log --oneline
  st = status
  sw = switch
  undo = reset --soft HEAD^
  unstage = restore --staged :/
[branch]
  sort = -committerdate
[column]
  ui = auto
[commit]
  verbose = true
[core]
  editor = nvim
  attributesFile = /home/tiikeri/dotfiles/.gitattributes
[diff "python"]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  xfuncname = ^[ \\t]*def[ \\t]+.*$
[init]
  defaultBranch = main
[merge]
  tool = nvimdiff
[pull]
  ff = only
[tag]
  sort = version:refname
[user]
  name = Teemu Viikeri
  email = teemu.viikeri@haltu.fi
